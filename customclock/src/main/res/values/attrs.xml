<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomClock">
        <attr name="outsideCircleColor" format="color|reference"/>
        <attr name="hourLineColor" format="color|reference"/>
        <attr name="minuteLineColor" format="color|reference"/>
        <attr name="secondLineColor" format="color|reference"/>
        <attr name="insideSolidCircleColor" format="color|reference"/>
        <attr name="insideSolidCircleRadius" format="dimension|reference"/>
        <attr name="numberColor" format="color|reference"/>
        <attr name="numberTextSize" format="dimension|reference"/>
        <attr name="numberPaintLength" format="dimension|reference"/>
        <attr name="outsideCirclePaintSize" format="dimension|reference"/>
        <attr name="outsideCirclePaintLength" format="dimension|reference"/>
        <attr name="hourLinePaintSize" format="dimension|reference"/>
        <attr name="minuteLinePaintSize" format="dimension|reference"/>
        <attr name="secondLinePaintSize" format="dimension|reference"/>

        <attr name="clockMode" format="enum">
            <enum name="onlyHourNotNumber" value="0"/>
            <enum name="onlyHourHaveNumber" value="1"/>
            <enum name="hourAndMinuteNotNumber" value="2"/>
            <enum name="hourAndMinuteHaveNumber" value="3"/>
        </attr>
    </declare-styleable>
</resources>